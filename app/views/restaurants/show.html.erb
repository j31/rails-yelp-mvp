<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>


<br>
<p><strong>What diners are saying...</strong></p>

<ul>
<% @restaurant.reviews.each do |r| %>
  <li><%= r.content %></li>
<% end %>
</ul>

<br>

<p><%= link_to "Edit restaurant", edit_restaurant_path(@restaurant) %></p>
<p><%= link_to "Delete restaurant", restaurant_path(@restaurant), method: :delete %></p>

<br>
<div class="container">
<p><strong>Add your review!</strong></p>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Add Review", class: "btn btn-primary" %>
<% end %>
</div>
